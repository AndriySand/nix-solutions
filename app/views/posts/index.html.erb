<div class="page-header">
  <h1>Posts</h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Title</th>
      <th>Author</th>
      <th>Url</th>
      <th>Content</th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= link_to post.title, post_path(post) %></td>
        <td><%= post.author %></td>
        <td><%= post.url %></td>
        <td><%= truncate(post.body, length: 30) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= will_paginate @posts, renderer: BootstrapPagination::Rails %>
